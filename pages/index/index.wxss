.menu{
  position:absolute;left:0;top:0;
  height:100%;width:220rpx;
  background:#f2f2f2;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.menu .menuItem{
  height:80rpx;line-height:80rpx;
  color: #666;font-family: "Microsoft Yahei";
  padding-left:20rpx;
}
.menu .menuItem.actived{
  background:#fff;
}
.cookList{
  position:absolute;left:220rpx;top:0;right:0;
  height:100%;
}
.cookList .cookHd{
  font-size:32rpx;color:#333;
  padding:20rpx;
}
.cookList .item{
  display:flex;justify-content:space-around;align-items: center;
  padding:20rpx;font-family: "Microsoft Yahei";
}
.cookList .item .itemIcon{
  width:200rpx;height:200rpx;
}
.cookList .item .itemTxt{
  display:flex;flex-direction: column;justify-content:space-between;align-items: flex-start;flex:1;
  margin-left:20rpx;height:200rpx;
}
.cookList .item .cookName{
  font-size:40rpx;font-weight:bold;color:#666;
}
.cookList .item .cookInfo{
  font-size:28rpx;color:#999;
}
.cookList .item .cookPrice{
  display:flex;justify-content:space-between;align-items: center;width:100%;
  font-size:40rpx;font-weight:bold;color:#f00;
}
.cookList .item .cookPrice .changeNum{
  display:flex;justify-content:space-between;align-items: center;
}
.cookList .item .cookPrice .cookIcon{
  width:48rpx;height:48rpx;border-radius:24rpx;
}
.cookList .item .cookPrice .num{
  margin:0 10rpx;color:#333;
}