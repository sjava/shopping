<!--index.wxml-->
<view class="home">
  <scroll-view class="menu" scroll-y scroll-with-animation>
    <view class="scroll-view-item">
      <view wx:for="{{menuList}}" wx:key="index" class="{{menuIndex == index ? 'menuItem actived':'menuItem'}}" data-index="{{index}}" data-id="{{item.id}}" bindtap="changeIndex">
        {{item.value}}
      </view>
    </view>
  </scroll-view>
  <scroll-view class="cookList" scroll-y scroll-into-view="{{orientate}}" scroll-with-animation>
    <view class="cookWrap" wx:for="{{cookList}}" wx:key="index" wx:for-index="index" wx:for-item="item" id="{{item.id}}">
      <view class="cookHd">
        {{item.cookHd}}
      </view>
      <view class="cookBd">
        <cookItem wx:for="{{item.cookBd}}" wx:key="idx" wx:for-index="idx" wx:for-item="child" item="{{child}}" data-index="{{index}}" data-idx="{{idx}}"  bind:changePrice="changePrice"></cookItem>
      </view>
    </view>
  </scroll-view>
  <view class="cartList">
    <view class="cartItem">
      <view class="describe">
        <text class="goodsName">9.9元阿方索华筒2个</text>
        <text class="goodsPrice">¥9.9</text>
      </view>
      <view class="changeNum">
        <image class="cookIcon minus" bindtap="handleMinus" src="../../assets/minus.svg"></image>
        <view class="num">1</view>
        <image class="cookIcon plus" bindtap="handlePlus" src="../../assets/plus.svg"></image>
      </view>
    </view>
    <view class="cartItem">
      <view class="describe">
        <text class="goodsName">9.9元阿方索华筒2个</text>
        <text class="goodsPrice">¥9.9</text>
      </view>
      <view class="changeNum">
        <image class="cookIcon minus" bindtap="handleMinus" src="../../assets/minus.svg"></image>
        <view class="num">1</view>
        <image class="cookIcon plus" bindtap="handlePlus" src="../../assets/plus.svg"></image>
      </view>
    </view>
  </view>
  <view class="cart">
    <image src="../../assets/cart.svg"></image>
    <text>¥{{price}}</text>
    <button>去结算</button>
  </view>
</view>
